dark = input("""[*] криптографический скрипт

[1] энкодировать
[2] декодировать
""")
while True:
	if dark == '1':
		string = input('энкоде: ')
		string_encode = string.encode('utf-8')
		encoded = base64.b64encode(string_encode, altchars=b'-:')
		print(encoded)
	if dark == '2':
	 code_string = input("[*] декоде:")
	 print(base64.b64decode(code_string))